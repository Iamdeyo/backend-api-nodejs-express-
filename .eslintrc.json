{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb-base", "plugin:prettier/recommended", "plugin:import/errors", "plugin:import/warnings"],
    "plugins": ["prettier", "import", "no-loops"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "warn",
        "no-undef": "error",
        "no-loop-func": "error",
        "no-duplicate-imports": "error",
        "func-names" :"off",
        "import/extensions": ["error", "ignorePackages"],
        "no-loops/no-loops": 2    
    }
}
